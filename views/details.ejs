<% layout("layouts/boilerplate")%>

    <h1 class="display-6 text-center">
        <%= title%>
    </h1>
    <br>
    <div class="row">
        <div class="col-6">
            <div id="wonderCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/00/Brooklyn_Bridge_Manhattan.jpg/1280px-Brooklyn_Bridge_Manhattan.jpg"
                        alt="Brooklyn Bridge" class="img-fluid">
                </div>
                <a class="carousel-control-prev" href="#wonderCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#wonderCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-6">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12098.167636954853!2d-73.9968643!3d40.7060855!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x2526ddba7abd465c!2sBrooklyn%20Bridge!5e0!3m2!1sen!2sus!4v1635383028143!5m2!1sen!2sus"
                style="width: 100%;height: 100%;"></iframe>
        </div>
    </div>

    <div class="container-fluid pt-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">About</h5>
                <p class="card-text">This is where the Wikipedia introduction paragraph will go giving the user a brief
                    overview of the wonder.</p>
                <h5 class="card-title">Learn More!</h5>
                <h6 class="card-subtitle mb-2 text-muted">Expand each section below to learn more</h6>
                <div class="row">
                    <p>
                        <a class="btn btn-secondary" data-bs-toggle="collapse" href="#descriptionButton" role="button"
                            aria-expanded="false" aria-controls="descriptionButton">
                            Description
                        </a>
                        <a class="btn btn-secondary" data-bs-toggle="collapse" href="#historyButton" role="button"
                            aria-expanded="false" aria-controls="historyButton">
                            History
                        </a>
                        <a class="btn btn-secondary" data-bs-toggle="collapse" href="#upcomingButton" role="button"
                            aria-expanded="false" aria-controls="upcomingButton">
                            More sections coming soon...
                        </a>
                        <a class="btn btn-secondary" data-bs-toggle="collapse" href="#referencesButton" role="button"
                            aria-expanded="false" aria-controls="referencesButton">
                            References
                        </a>
                    </p>
                    <div class="collapse py-1" id="descriptionButton">
                        <div class="card card-body">
                            This is where the "Description" paragraph from Wikipedia will go if the users are interested
                            in
                            learning more.
                        </div>
                    </div>
                    <div class="collapse py-1" id="historyButton">
                        <div class="card card-body">
                            This is where the "History" paragraph from Wikipedia will go if the users are interested in
                            learning more.
                        </div>
                    </div>
                    <div class="collapse py-1" id="upcomingButton">
                        <div class="card card-body">
                            There will be buttons for each section scraped from Wikipedia. Allowing the user to learn
                            see as much or as little information as they would like.
                        </div>
                    </div>
                    <div class="collapse py-1" id="referencesButton">
                        <div class="card card-body">
                            <ol class="list-group list-group-numbered counter-reset">
                                <li class="list-group-item">1. Reference #1 <a href="#">Link</a></li>
                                <li class="list-group-item">2. Reference #2 <a href="#">Link</a></li>
                                <li class="list-group-item">3. Reference #3 <a href="#">Link</a></li>
                            </ol>
                        </div>
                    </div>

                </div>


            </div>
        </div>

    </div>