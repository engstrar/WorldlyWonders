<% layout("layouts/boilerplate")%>

    <h1 class="display-6 text-center">
        <%= title%>
    </h1>
    <br>
    <div class="row">
        <div class="col-6">
            <div id="wonderCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <img class="img-fluid" src="#">
                </div>
                <a class="carousel-control-prev" href="#wonderCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#wonderCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-6">
            <iframe src="<%=map%>" style="width: 100%;height: 100%;"></iframe>
        </div>
    </div>

    <div class="container-fluid pt-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">About</h5>
                <p class="card-text">
                    <%=data.intro%>
                </p>
                <h5 class="card-title">Learn More!</h5>
                <h6 class="card-subtitle mb-2 text-muted">Expand each section below to learn more</h6>
                <div class="row">
                    <%- include("./partials/sections") %>
                        <p>
                            <a class="btn btn-secondary" data-bs-toggle="collapse" href="#referencesButton"
                                role="button" aria-expanded="false" aria-controls="referencesButton">
                                References
                            </a>

                        <div class="collapse py-1" id="referencesButton">
                            <div class="card card-body">
                                <ol class="list-group list-group-numbered">
                                    <% for (const [key, value] of Object.entries(data.references)) { %>
                                        <li class="list-group-item">
                                            [<%=key%>] <%-value%>
                                        </li>
                                        <% } %>
                                </ol>
                                <a class="btn btn-outline-secondary btn-sm" data-bs-toggle="collapse"
                                    href="#referencesButton" role="button" aria-expanded="false"
                                    aria-controls="referencesButton">
                                    Hide References Section
                                </a>
                            </div>
                        </div>
                        </p>
                </div>
            </div>
        </div>
    </div>